
<div>
  <div class="row">
    <div class="col-sm-12">
      <strong>Title:</strong> <%= @title.title %>
    </div>
  </div>

  <img src='<%= "/poster/" + @title.imdbId %>'>

  <p>
    <strong>Text:</strong>
    <%= @title.description %>
  </p>

  <h2>Reviews</h2>
  <% @title.reviews.each do |review| %>
    <p>
      <strong>Review:</strong>
      <%= review.content %>
      <strong>Votes:</strong>
      <%= review.getVoteCount() %>

      <% if user_signed_in? %>
        <%= form_for :vote, url: votes_path do |f| %>
          <%= f.hidden_field :review_id, {:value => review.id} %>

          <%= f.submit %>
        <% end %>
      <% end %>

    </p>
  <% end %>

  <h2>Add a review</h2>

  <%= form_for([@title, @title.reviews.build]) do |f| %>
    <p>
      <%= f.label :content %><br>
      <%= f.text_field :content %><br>
    </p>
    <p>
      <%= f.submit %>
    </p>

  <% end %>

  <%= link_to 'Back', titles_path %>

</div>
