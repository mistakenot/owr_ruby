<div class="row">
  <div class="col-sm-1">
    <h4>Titles</h4>
  </div>
</div>

<div>
  <% @titles.each_slice(2) do |pair| %>
    <div class="row">
      <% pair.each do |t| %>
        <div class="col-sm-6">
          <%= render "title_summary", title: t, reviews: t.reviews %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
